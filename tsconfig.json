{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2019",
        "strict": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [
            "ES2019"
        ]
    },
    "include": [
        "src/index.ts"
    ]
}