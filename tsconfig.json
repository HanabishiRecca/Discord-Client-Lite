{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES2020",
        "strict": true,
        "moduleResolution": "node",
        "outDir": "package/dist",
        "baseUrl": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [
            "ES2020"
        ]
    },
    "include": [
        "src/index.ts"
    ]
}