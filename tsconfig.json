{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "strict": true,
        "moduleResolution": "node",
        "outDir": "package/dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "removeComments": true,
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,
        "lib": []
    },
    "include": [
        "src/index.ts"
    ]
}
